
@using Microsoft.AspNetCore.Identity
@model Catagory

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class=" row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Catagory</h2>
            </div>
        </div>
    </div>
</div>
<div class="card-body">
    <form method="post">
      <input asp-for="CatagoryId" hidden />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="CatagoryName" class="form-control" aria-required="true" />
            <label asp-for="CatagoryName"></label>
            <span asp-validation-for="CatagoryName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="CatagoryDescription" class="form-control" aria-required="true" />
            <label asp-for="CatagoryDescription"></label>
            <span asp-validation-for="CatagoryDescription" class="text-danger"></span>
        </div>
        <div class="row">

            <button type="submit" class="btn btn-primary">Update Catagory</button>
        </div>
    </form>
</div>
