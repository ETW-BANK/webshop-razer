@using Microsoft.AspNetCore.Identity
@model IEnumerable<Products>

@{
    ViewData["Title"] = "Products";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
</div>
<div class="card-body">
    <div class="container">
        <div class="col-6">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary mb-3">Add New Product</a>
        </div>
    </div>

    <table class="table table-bordered table-striped" id="tblData">
        <thead>
            <tr>
                
                <th>Name</th>
                <th>Category</th>
                <th>Description</th>
                <th>Manufacturer</th>
                <th>Price</th>
                <th>Size</th>
                <th>Instructions</th>
                <th>Ingredients</th>
                <th>ExpiryDate</th>
                <th>Stock Qty</th>
                <th>Usage</th>
                <th>Prescription </th>
                <th>Action</th>
            </tr>
        </thead>
       
    </table>
</div>

@section Scripts {
    <script src="~/js/Product.js"></script>
}
