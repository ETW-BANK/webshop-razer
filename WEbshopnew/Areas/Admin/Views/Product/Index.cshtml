@using Microsoft.AspNetCore.Identity
@model IEnumerable<Products>



@{
    ViewData["Title"] = "Products";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class=" row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
</div>
<div class="card-body">
    <div class="container">
        <div class="col-6">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary mb-3 ">Add New Product</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
            
                <th>Discription</th>
                <th>Manufacturer</th>
                <th>Price</th>
                <th>Size</th>
                <th>Instructions</th>
                <th>Ingridients</th>
                <th>Expirey Date</th>
                <th>Stock Qty</th>
                <th>Usage</th>
                <th>Priscription Drug</th>
                
                <th>Action</th>
                <th>Catagory</th>
           
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    
                    <td>@item.Description</td>
                    <td>@item.Manufacturer</td>
                    <td>@item.Price</td>
                    <td>@item.Size</td>
                    <td>@item.Instructions</td>
                    <td>@item.Ingredients</td>
                    <td>@item.ExpiryDate</td>
                    <td>@item.StockQuantity</td>
                    <td>@item.Usage</td>
                    <td>@item.IsPrescriptionRequired</td>
                   

                    <td>
                        <a asp-controller="Product" asp-action="Upsert" asp-route-id="@item.ProductId" method="post" class="btn btn-warning">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.ProductId" method="post" class="d-inline">

                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this Products?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


