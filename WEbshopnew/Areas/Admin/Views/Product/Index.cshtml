@model IEnumerable<WEbshopnew.Models.Products>

@{
    ViewData["Title"] = "Product List";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
</div>

<div class="card-body">
    <div class="container">
        <div class="col-6">
            <a asp-action="Create" class="btn btn-primary mb-3">Create Product</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Usage</th>
                <th>Size</th>
                <th>Price</th>
                <th>Manufacturer</th>
                <th>Expiry Date</th>
                <th>Prescription Required</th>
                <th>Stock Quantity</th>
                <th>Instructions</th>
                <th>Ingredients</th>
                <th>Catagory</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Description</td>
                    <td>@item.Usage</td>
                    <td>@item.Size</td>
                    <td>@item.Price</td>
                    <td>@item.Manufacturer</td>
                    <td>@item.ExpiryDate.ToShortDateString()</td>
                    <td>@(item.IsPrescriptionRequired ? "Yes" : "No")</td>
                    <td>@item.StockQuantity</td>
                    <td>@item.Instructions</td>
                    <td>@item.Ingredients</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.ProductId" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
