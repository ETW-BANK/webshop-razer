@model IEnumerable<Products>

  <div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">

                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded" fixed-size-img>

                        <img src="@product.ImageUrl" class="card-img-top rounded "/>
                        <div class="card-body pb-0" fixed-size-img>
                            <div class="pl-1" fixed-size-img>

                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center" >@product.ProductName</p>
                            <p class="card-title text-warning text-center">Made By:<b>@product.Manufacturer</b></p>
                        </div>
                            <div class="pl-1" fixed-size-img>

                                <p class=" text-dark opacity-75  text-center">SEK:<span>@product.Price</span></p>
                                
                            </div>

                            <div class="pl-1" fixed-size-img>

                                @if (product.IsPrescriptionRequired == false)
                                {
                                    <p class=" text-dark opacity-75  text-center">Priscription Required:<span>No</span></p>
                                }
                                else
                                {
                                    <p class=" text-dark opacity-75  text-center">Priscription Required:<span>Yes</span></p>
                                }


                            </div>
                            

                        </div>

                        <div class="pl-1" fixed-size-img>

                            <a asp-action="Details" asp-route-id="@product.ProductId" class=" btn btn-danger bg-dark border-0 form-control  text-center">Details</a>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
</div>