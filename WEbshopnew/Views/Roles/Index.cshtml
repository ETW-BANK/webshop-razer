@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>


@{
    ViewData["Titrle"] = "Roles";
}

<h1>Application Roles</h1>

<p>

    <a asp-action="Create">Create New Role</a>
</p>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model=>model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.NormalizedName)</th>
           
            <th></th>
    </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.NormalizedName)</td>
                <td > 
                    <a asp-action="Edit" asp-route-id="@item.Id" method="post" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                      
                        <button type="submit" class="btn btn-danger"  onclick="return confirm('Are you sure you want to delete this role?');">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>